// This is a generated Prisma schema for the scoped database.
// It includes only the models that are synchronized with the client.

generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

model Board {
  id	String	@id @default(uuid(4))
  name	String
  createdAt	DateTime	@default(now())
  todos	Todo[]
  user	User	@relation(fields: [userId], references: [id])
  userId	String
}

model Todo {
  id	String	@id @default(uuid(4))
  title	String
  description	String?
  isCompleted	Boolean	@default(false)
  createdAt	DateTime	@default(now())
  board	Board	@relation(fields: [boardId], references: [id])
  boardId	String
}

model User {
  id	String	@id
  name	String
  email	String	@unique
  emailVerified	Boolean	@default(false)
  image	String?
  createdAt	DateTime	@default(now())
  updatedAt	DateTime	@updatedAt
  boards	Board[]
}

enum ChangeOperation {
  create
  update
  delete
}

