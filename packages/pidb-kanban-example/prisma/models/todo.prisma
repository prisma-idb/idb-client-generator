model Todo {
  id          String   @id @default(uuid())
  title       String
  description String?
  isCompleted Boolean  @default(false)
  createdAt   DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  userId String

  board   Board  @relation(fields: [boardId], references: [id])
  boardId String
}

model Board {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  todos     Todo[]
}
