{
  "git": {
    "commit": false,
    "tag": true,
    "tagName": "v${version}",
    "push": true
  },
  "npm": {
    "publish": true,
    "skipChecks": true,
    "publishPackageManager": "pnpm"
  },
  "github": {
    "release": true,
    "releaseName": "v${version}"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular"
    }
  }
}
