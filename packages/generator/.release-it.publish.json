{
  "git": {
    "requireCleanWorkingDir": true,
    "commit": false,
    "tag": true,
    "tagName": "v${version}",
    "push": true,
    "pushArgs": "--follow-tags --no-verify"
  },
  "npm": {
    "publish": true,
    "skipChecks": false,
    "workspaces": false
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "draft": false,
    "preRelease": false,
    "assets": []
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular"
    }
  }
}
