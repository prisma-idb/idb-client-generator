{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": ["ESNext"],
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": "./src",
    "newLine": "lf",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ES2023"
  },
  "include": ["src/**/*"],
  "exclude": ["**/node_modules", "**/*.test.ts", "**/__tests__", "**/dest"]
}
