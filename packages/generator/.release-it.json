{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular"
    }
  },
  "npm": {
    "publish": false,
    "ignoreVersion": true,
    "skipChecks": true
  },
  "git": {
    "commit": false,
    "tag": true,
    "tagName": "${version}",
    "push": true
  }
}
