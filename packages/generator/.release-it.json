{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular"
    }
  },
  "npm": {
    "publish": false,
    "ignoreVersion": true
  },
  "git": {
    "commit": true,
    "commitMessage": "chore(release): ${version}",
    "tag": true,
    "tagName": "${version}",
    "push": true
  }
}
