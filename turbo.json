{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": ["tsconfig.json", "eslint.config.js", ".prettierrc", ".prettierignore", "package.json"],
  "tasks": {
    "build": {
      "outputs": ["dist/**", ".svelte-kit/**", ".next/**", "build/**"],
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "interactive": true
    },
    "lint": {},
    "format": {
      "cache": false
    },
    "check": {
      "outputs": [".svelte-kit/**"]
    },
    "test": {
      "outputs": ["test-results/**", "playwright-report/**", "coverage/**"],
      "dependsOn": ["generate"],
      "env": ["DATABASE_URL"]
    },
    "generate": {
      "outputs": ["src/lib/generated/**", "prisma/generated/**"],
      "dependsOn": ["^build"],
      "env": ["DATABASE_URL"]
    },
    "release": {
      "cache": false,
      "dependsOn": ["build", "test", "lint"]
    },
    "preview": {
      "cache": false,
      "persistent": true,
      "interactive": true
    }
  }
}
