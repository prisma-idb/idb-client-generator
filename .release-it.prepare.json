{
  "git": {
    "requireCleanWorkingDir": false,
    "commit": true,
    "tag": false,
    "push": true,
    "pushArgs": "--no-verify",
    "commitMessage": "chore(release): v${version}"
  },
  "npm": {
    "publish": false,
    "allowSameVersion": false,
    "skipChecks": false
  },
  "github": {
    "release": false,
    "releaseName": null
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "preset": "angular",
      "header": "# Changelog",
      "strictSemVer": true
    }
  },
  "hooks": {
    "before:init": [
      "pnpm run test:schema-gen"
    ]
  }
}
